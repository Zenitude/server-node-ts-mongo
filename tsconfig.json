{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./ts",
    "outDir": "./js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./ts/utils/types/", "./node_modules/@types"]
  },
  "include": [
    "./ts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}